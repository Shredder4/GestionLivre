<h2> Liste des auteurs</h2>
<a class='btn btn-primary btn-sm' href='/createAuteur'> Nouveau Auteur</a>
<table class="table table-bordered">
	<thead>
		<tr>
			<th>ID </th>
			<th>Nom </th>
			<th>Email </th>
			<th>Télephone </th>
			<th>Adresse </th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.listAuteurs)
		{
			<tr>
				<td>@item.id</td>
				<td>@item.nom</td>
				<td>@item.email</td>
				<td>@item.telephone</td>
				<td>@item.adresse</td>
				<td>
					<a class='btn btn-primary btn-sm' href='/editAuteur?id=@item.id'> Editer </a>
					<a class='btn btn-danger btn-sm' href='/deleteAuteur?id=@item.id'> Supprimer</a>
				</td>
			</tr>
		}
	</tbody>
</table>
