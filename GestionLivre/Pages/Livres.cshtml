<br>
<h2> Liste des livres</h2>
<a class='btn btn-primary btn-sm' href='/createLivre'> Nouveau Livre</a>
<table class="table table-bordered">
	<thead>
		<tr>
			<th>ID </th>
			<th>Titre </th>
			<th>ISBN </th>
			<th>Editeur </th>
			<th>Auteur </th>
			<th>Categorie</th>
			<th>Description</th>
			<th>Annee Edition</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.listLivres)
		{
			<tr>
				<td>@item.id</td>
				<td>@item.titre</td>
				<td>@item.isbn</td>
				<td>@item.Editeur</td>
				<td>@item.Auteur</td>
				<td>@item.Categorie</td>
				<td>@item.description</td>
				<td>@item.anneeedition</td>
				<td>
					<a class='btn btn-primary btn-sm' href='/editLivre?id=@item.id'> Editer </a>
					<a class='btn btn-danger btn-sm' href='/deleteLivre?id=@item.id'> Supprimer</a>
				</td>
			</tr>
		}
	</tbody>
</table>

