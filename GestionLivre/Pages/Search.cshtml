@page
@model GestionLivre.Pages.SearchModel
@{
    ViewData["Title"] = "Home page";
}
<head>


    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">


    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="css/style.css" rel="stylesheet">
</head>



<!-- Header Start -->

<div class="container-fluid bg-primary py-5 mb-5 ">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center">
                <h1 class="display-3 text-white animated slideInDown">Search</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a class="text-white" href="/Index">Home</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Search</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Header End -->


<div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
    <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>
@if (!Model.isposted)
{
    <div class="container" style="background-color:white;display:inline-block;">
        <div class="text-center">
            <h1 class="display-4">Search Menu</h1>
            <p>
                In Here You Can Search For Books You Wish To Find
                <br />
            </p><br />
        </div>
    </div>
}
<div class="container" style="background-color:white;display:inline-block;text-align:center">
    <form method="post" style="text-align:center">
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Term To Search</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" id="exampleInputEmail1" name="searchterm" placeholder="Term To Search" />

            </div>
        </div>
        <div class="form-group">
            <label>Search Option:</label>
            <select class="form-select" name="option" id="exampleSelect1" style="max-width:50%;margin-left:330px">
                <option value="category">Category</option>
                <option value="auteur">Auteur</option>
                <option value="editeur">Editeur</option>
                <option value="titre">Titre</option>
            </select>
        </div>
        <br />
        <br />
        <br />
        <div class="row mb-3">
            <div class="offset-sm3 col-sm-3 d-grid">
                <button type="submit" class="btn btn-primary" style="margin-left:650px"> Search </button>
            </div>
        </div>
        <br />
        <br />
    </form>
</div>

 @if (Model.isposted && !Model.isempty)
{
    <br />
    <br />
    <br />
    <div class="container" style="background-color:white;text-align:center">
        <h1>Book List</h1>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>IDlivre </th>
                <th>Titre </th>
                <th>ISBN </th>
                <th>editeur </th>
                <th>Auteur</th>
                <th>Categorie </th>
                <th>DescriptionLivre</th>
                <th>AnneeEdition</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.livreInfo)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.titre</td>
                    <td>@item.isbn</td>
                    <td>@item.Editeur</td>
                    <td>@item.Auteur</td>
                    <td>@item.Categorie</td>
                    <td>@item.description</td>
                    <td>@item.anneeedition</td>

                </tr>
            }
        </tbody>
    </table>
    <br />
    <br />
    <br />

}
else @if (Model.isposted && Model.isempty)
{
    <div class="container" style="background-color:white;text-align:center">
        <h1 style="text-align:center">No book found</h1>
        <p style="text-align:center">Please try again</p>
    </div>
}
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="lib/wow/wow.min.js"></script>
<script src="lib/easing/easing.min.js"></script>
<script src="lib/waypoints/waypoints.min.js"></script>
<script src="lib/owlcarousel/owl.carousel.min.js"></script>

<!-- Template Javascript -->
<script src="js/main.js"></script>