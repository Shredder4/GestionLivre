@page
@model GestionLivre.Pages.editCategorieModel
@{
}
<br />
<h2>Les informations de la categorie : </h2>
<form method="post">
	<input type="hidden" name="id" value="@Model.CategInfo.id">
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Nom</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="nom"
				   value="@Model.CategInfo.nom">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Description</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="description"
				   value="@Model.CategInfo.description">
		</div>
	</div>
	<div class="row mb-3">
		<div class="offset-sm3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary"> Submit </button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
		</div>
	</div>
</form>