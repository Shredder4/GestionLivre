<br>
<h2> Liste des categories</h2>
<a class='btn btn-primary btn-sm' href='/createCategorie'> Nouvelle Categorie</a>
<table class="table table-bordered">
	<thead>
		<tr>
			<th>ID </th>
			<th>Nom </th>
			<th>Description </th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.listCategories)
		{
			<tr>
				<td>@item.id</td>
				<td>@item.nom</td>
				<td>@item.description</td>
				<td>
					<a class='btn btn-primary btn-sm' href='/editCategorie?id=@item.id'> Editer </a>
					<a class='btn btn-danger btn-sm' href='/deleteCategorie?id=@item.id'> Supprimer</a>
				</td>
			</tr>
		}
	</tbody>
</table>
